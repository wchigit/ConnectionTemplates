# Create an Azure Machine Learning Workspace, not AI hub

resource "azurerm_machine_learning_workspace" "{{engine.module_name}}" {
	name                    = "{{engine.module_params_name}}"
	location                = azurerm_resource_group.rg.location
	resource_group_name     = azurerm_resource_group.rg.name
	application_insights_id = azurerm_application_insights.ai_aidep.id
	key_vault_id            = azurerm_key_vault.kv_aidep.id
	storage_account_id      = azurerm_storage_account.strg_aidep.id

	identity {
		type = "SystemAssigned"
	}
}